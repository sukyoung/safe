# The following environment variable setup does not work for the junit command.
#export JS_HOME="$(dirname $0)/.."
export JS_HOME="`$(dirname $0)/js_home`"

if (uname | egrep CYGWIN > /dev/null) ; then
  SEP=";"
else
  SEP=":"
fi
SV="2.9.2"
TP="${JS_HOME}/lib"
BUILD="${JS_HOME}/target/scala-${SV}/classes"
CP="${BUILD}${SEP}${TP}/junit.jar${SEP}${TP}/commons-lang3-3.1.jar${SEP}${TP}/wala.util.jar${SEP}${TP}/wala.cast.jar${SEP}${TP}/wala.cast.js.jar${SEP}${TP}/jericho-html-3.3.jar${SEP}${JS_HOME}/bin/xtc.jar${SEP}${TP}/plt.jar${SEP}${TP}/astgen.jar${SEP}${TP}/scala-compiler-${SV}.jar${SEP}${TP}/scala-library-${SV}.jar${SEP}${TP}/lift-json_2.9.1-2.4.jar${SEP}${TP}/nekohtml.jar${SEP}${TP}/xercesImpl.jar${SEP}${TP}/xml-apis.jar${SEP}${TP}/com.microsoft.z3.jar${SEP}${TP}/jline-2.12.jar${SEP}$CLASSPATH"

if (uname | egrep Darwin > /dev/null) ; then
  export DYLD_LIBRARY_PATH="${TP}"
else
  export LD_LIBRARY_PATH="${TP}"
fi

if [ -z "$JAVA_HOME" ] ; then
  JAVACMD=java
else
  JAVACMD="$JAVA_HOME/bin/java"
fi

if [ -z "$JAVA_FLAGS" ] ; then
  if (uname | egrep Darwin > /dev/null) ; then
    JAVA_FLAGS="-Xmx2048m -Xss32m -Dfile.encoding=utf8"
  else
    JAVA_FLAGS="-Xmx2048m -Xss32m -Dfile.encoding=utf8 -Djava.library.path=${TP}"
  fi
fi

"$JAVACMD" $JAVA_FLAGS -cp "$CP" kr.ac.kaist.jsaf.Shell "$@"
wait $!
